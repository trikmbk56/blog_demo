<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
    <div class="btn-group">
      <button type="button" class="btn btn-sm">Edit</button>
      <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Edit", edit_comment_path(comment) %></li>
        <li><%= link_to "Delete", comment, method: :delete, data: { confirm: "You sure"} %></li>
      </ul>
    </div>
    <% end %>
  </span>
</li>