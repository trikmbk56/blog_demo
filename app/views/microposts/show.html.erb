<% provide(:title, @micropost.title) %>
<div class="microposts">
  <aside class="col-md-4">
    <section class="user_info">
    <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
      <h1><%= @micropost.user.name %></h1>
      <span><%= link_to "view profile", @micropost.user %></span>
    </section>
    <section class="timestamp">
     Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
   </section>
   <section>
     <h3 class="title"><%= link_to @micropost.title, @micropost %></h3>
     <p class="content"><%= @micropost.content %></p>
   </section>
 </aside>
</div>
<div class="col-md-8">
  <% if logged_in? %>
  <%= render 'shared/comment_form' %>
  <hr>
  <% end %>
  <%= render 'shared/comments' %>
</div>