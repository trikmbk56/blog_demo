<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="title"><%= link_to micropost.title, micropost %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
    <div class="btn-group">
      <button type="button" class="btn btn-sm">Edit</button>
      <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Edit", edit_micropost_path(micropost) %></li>
        <li><%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure"} %></li>
      </ul>
    </div>
    <% end %>
  </span>
</li>